<Window x:Class="WPFCurrencyConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCurrencyConverter"
        mc:Ignorable="d"
        Title="Currency Converter" Height="450" Width="800">
    <TabControl Name="TbController">
        <TabItem Name="TbConverter" Header="Converter">
            <Grid>
                <StackPanel>
                    <Label Content="Currency Converter"
                   Margin="0 20 0 0" FontSize="28"
                   HorizontalAlignment="Center" FontWeight="Bold" Background="{x:Null}">
                        <Label.Foreground>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFD50BF7"/>
                                <GradientStop Color="#FF720984" Offset="1"/>
                            </LinearGradientBrush>
                        </Label.Foreground>
                    </Label>
                    <Label x:Name="LbError"
                   Margin="0 0 0 20" FontSize="12"
                   Foreground="Red"
                   HorizontalAlignment="Center" FontWeight="Thin">
                    </Label>
                    <StackPanel Margin="30 0">
                        <StackPanel.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFD50BF7"/>
                                <GradientStop Color="#FF720984" Offset="1"/>
                            </LinearGradientBrush>
                        </StackPanel.Background>
                        <Border Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="10 0">
                                    <Label Content="Enter amount" Foreground="white" />
                                    <TextBox x:Name="InpFromAmount" Text="{Binding Path=AmountToConvert, Mode=OneWayToSource, FallbackValue='0', TargetNullValue='0'}" />
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10 0">
                                    <Label Content="From" Foreground="white" />
                                    <ComboBox x:Name="FromCurrency" SelectedIndex="{Binding IdFromCurrency, Mode=TwoWay}" ItemsSource="{Binding Currencies}" />
                                </StackPanel>

                                <Image Grid.Column="2" Width="18" Height="18"
                               Source="/Assets/icon_exchange.png"
                               Margin="0 20 0 10" HorizontalAlignment="Center">
                                </Image>

                                <StackPanel Grid.Column="3" Margin="10 0">
                                    <Label Content="To" Foreground="white" />
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="InpToAmount" Grid.Column="0" IsEnabled="False" Margin="2 0" />
                                        <ComboBox Grid.Column="1" Margin="2 0" SelectedIndex="{Binding IdToCurrency, Mode=TwoWay}" x:Name="ToCurrency" ItemsSource="{Binding Currencies}" />
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                    <Border Padding="30">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Click="OnConvert" x:Name="BtnConvert" Grid.Column="1" HorizontalContentAlignment ="Center" Padding="24 8" Content="Convert" Foreground="white" FontWeight="Bold">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFD50BF7"/>
                                        <GradientStop Color="#FF720984" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                            <Button Click="OnClear" x:Name="BtnClear" Grid.Column="2" HorizontalContentAlignment ="Center" Padding="24 8" Margin="5 0 0 0" Content="Clear" Foreground="Black" FontWeight="Bold">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="White"/>
                                        <GradientStop Color="#FFC3C3C3" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Name="TbManager" Header="Currency Manager">
            <StackPanel>
                <Label Content="Currency Manager"
                   Margin="0 10 0 0" FontSize="18"
                   HorizontalAlignment="Center" FontWeight="Bold" Background="{x:Null}">
                    <Label.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFD50BF7"/>
                            <GradientStop Color="#FF720984" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>

                <Label
                   Margin="0 0 0 5" FontSize="12"
                   Foreground="Red"
                   HorizontalAlignment="Center" FontWeight="Thin">
                </Label>
                <StackPanel Margin="30 0">
                    <StackPanel.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFD50BF7"/>
                            <GradientStop Color="#FF720984" Offset="1"/>
                        </LinearGradientBrush>
                    </StackPanel.Background>
                    <Border Padding="20">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="10 0">
                                    <Label Content="Enter Rate" Foreground="white" />
                                    <TextBox x:Name="InpManagerRateAmount" Text="{Binding Path=ManagerRateAmount, Mode=OneWayToSource, FallbackValue=0, TargetNullValue=0}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10 0">
                                    <Label Content="From" Foreground="white" />
                                    <TextBox x:Name="InpManagerFromRateCode" Text="{Binding Path=ManagerFromCode, Mode=OneWayToSource}" />
                                </StackPanel>

                                <Image Grid.Column="2" Width="18" Height="18"
                                   Source="/Assets/icon_exchange.png"
                                   Margin="0 20 0 10" HorizontalAlignment="Center">
                                </Image>

                                <StackPanel Grid.Column="3" Margin="10 0">
                                    <Label Content="To" Foreground="white" />
                                    <TextBox Grid.Column="1" x:Name="InpManagerToRateCode" Text="{Binding Path=ManagerToCode, Mode=OneWayToSource}" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <Border Padding="10">
                    <Grid HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" x:Name="BtnSave" Click="OnManagerSave" Content="Save" Foreground="white" Margin="2 0" Padding="20 5">
                            <Button.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFD50BF7"/>
                                    <GradientStop Color="#FF720984" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                        <Button Grid.Column="1" x:Name="BtnCancel" Click="OnManagerCancel" Content="Cancel" Foreground="white" Margin="2 0" Padding="20 5">
                            <Button.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFD50BF7"/>
                                    <GradientStop Color="#FF720984" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </Grid>
                </Border>
                <DataGrid Grid.Row="1" Height="180"
                      CanUserAddRows="False" CanUserDeleteRows="False"
                      x:Name="DGMain" SelectionMode="Single" SelectionUnit="Cell"
                      SelectedCellsChanged="OnSelectedCell"
                      VerticalScrollBarVisibility="Auto"
                      AutoGenerateColumns="False"
                      d:ItemsSource="{d:SampleData ItemCount=5}" Margin="50 0">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="" Width="30">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="/Assets/pen-to-square-solid-full.png" ToolTip="Edit" Width="20" Height="20" x:Name="ImgEdit" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="" Width="30">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="/Assets/trash-solid-full.png" ToolTip="Delete" Width="20" Height="20" x:Name="ImgTrash" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Id">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Id}" d:Text="Id" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Code">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Code}" d:Text="Code" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Rate">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Rate}" d:Text="0.00"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="To Code">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=ToCode}" d:Text="ToCode"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
